<resources>

    <!-- App theme-->
    <style name="Theme.KonturTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Regular text styles-->
    <style name="RegularText">
        <item name="android:textColor">@color/blackText</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
    </style>

    <style name="RegularText.Title">
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <!-- Regular text styles with start and top margin-->
    <style name="RegularTextView" parent="RegularText">
        <item name="android:layout_marginStart">@dimen/regular_text_view_margin</item>
        <item name="android:layout_marginTop">@dimen/regular_text_view_margin</item>
    </style>

    <style name="RegularTextView.Title">
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="RegularTextView.Gray">
        <item name="android:textColor">@color/grayText</item>
    </style>

    <style name="RegularTextView.Clickable">
        <item name="android:textColor">@color/clickableText</item>
    </style>

</resources>